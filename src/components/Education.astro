---
import { Image } from 'astro:assets';
import centennialLogo from '../assets/experience/centennial_college_logo.jpeg';
import upbLogo from '../assets/experience/universidad_pontificia_bolivariana_logo.jpeg';
---

<!-- Education -->
<section id="education">
	<h2>Education ðŸ“š</h2>
	<div class="education-container">
		<div class="education-item">
			<Image class="education-logo" src={centennialLogo} alt="Centennial College Logo" />
			<div class="education-content">
				<div class="education-header">
					<h3>Cybersecurity</h3>
					<p class="education-date">2022 - 2023</p>
				</div>
				<p class="education-institution">Centennial College <span class="education-location">Toronto, Canada</span></p>
			</div>
		</div>

		<div class="education-item">
			<Image class="education-logo" src={upbLogo} alt="Universidad Pontificia Bolivariana Logo" />
			<div class="education-content">
				<div class="education-header">
					<h3>Software Engineering</h3>
					<p class="education-date">2016 - 2021</p>
				</div>
				<p class="education-institution">
					Universidad Pontificia Bolivariana <span class="education-location">MedellÃ­n, Colombia</span>
				</p>
			</div>
		</div>
	</div>
</section>

<style>
	.education-container {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.education-item {
		margin-bottom: 0.25rem;
		display: flex;
		gap: 0.75rem;
		position: relative;
	}

	.education-logo {
		width: 60px;
		height: 60px;
		min-width: 60px;
		background-color: #f5f5f5;
		border-radius: 50%;
		object-fit: contain;
		position: relative;
		z-index: 2;
		padding: 0;
	}

	.education-logo::after {
		content: '';
		position: absolute;
		top: 60px;
		bottom: -100%;
		left: 50%;
		width: 2px;
		background-color: #e0e0e0;
		transform: translateX(-50%);
		z-index: 1;
	}

	.education-item:last-child .education-logo::after {
		display: none;
	}

	.education-content {
		flex: 1;
	}

	.education-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
	}

	.education-header h3 {
		margin: 0;
		font-size: 1.3rem;
		font-weight: 600;
	}

	.education-date {
		font-size: 0.9rem;
		color: #888;
		margin: 0;
	}

	.education-institution {
		font-weight: 500;
		font-size: 1rem;
	}

	.education-location {
		font-style: italic;
		color: #888;
	}

	.education-activities {
		margin-top: 0.25rem;
		font-style: italic;
	}

	@media screen and (max-width: 736px) {
		.education-header {
			flex-direction: column;
			align-items: flex-start;
		}

		.education-item {
			flex-direction: column;
			gap: 0.75rem;
		}

		.education-logo {
			width: 50px;
			height: 50px;
			min-width: 50px;
		}

		.education-logo::after {
			display: none;
		}
	}
</style>
